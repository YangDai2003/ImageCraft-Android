    <style name="CustomDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:dialogCornerRadius">32dp</item>
    </style>

    <style name="Theme.ImageCraft.ActionBar" parent="Base.Theme.ImageCraft.ActionBar" />

</resources>